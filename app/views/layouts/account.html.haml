!!! Strict
%html
  %head
    %title Account
    = stylesheet_link_tag '/admin-template/css/960.css', '/admin-template/css/template.css', '/admin-template/css/colour.css', 'application'
    = javascript_include_tag :defaults
    = csrf_meta_tag
    %body
      %div.container_16.right
        = link_to_unless_current 'communities', account_communities_path
        = link_to_unless_current current_user, edit_account_user_path
        = link_to 'log out', destroy_user_session_path
      %h1#head Account
      %ul#navigation
        %li
          = link_to_unless_current 'My communities', account_communities_path do |name|
            %span.active= name
        %li
          = link_to_unless_current 'Edit profile', edit_account_user_path do |name|
            %span.active= name
        %li
          = link_to_unless_current 'Logout', destroy_user_session_path do |name|
            %span.active= name
      %div#content.container_16.clearfix
        - if title
          %h2= title
        - [:notice, :error, :message, :alert].each do |key|
          - unless flash[key].blank?
            %p{ :class => "flash #{key}" }= flash[key]
        = yield
