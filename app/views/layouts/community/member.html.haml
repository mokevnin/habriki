!!! Strict
%html
  %head
    %title= community
    = stylesheet_link_tag '/admin-template/css/960.css', '/admin-template/css/template.css', '/admin-template/css/colour.css', 'application'
    =javascript_include_tag :defaults
    %body
      %div.container_16.right
        - if signed_in?(:community_member)
          = link_to_unless_current member, community_member_path(community, member)
          = link_to 'log out', destroy_community_member_session_path(community)
        - else
          = link_to 'sign up', new_community_member_registration_path(community)
          = link_to 'sign in', new_community_member_session_path(community)
      %h1#head= community
      %ul#navigation
        %li
          = link_to_unless_current 'Home', :root do |name|
            %span.active= name
        - if current_community_member
          %li
            = link_to_unless_current 'Edit', edit_community_member_path(community, member) do |name|
              %span.active= name
        %li
          = link_to_unless_current 'Posts', community_member_posts_path(community, member) do |name|
            %span.active= name
      %div#content.container_16.clearfix
        - if title
          %h2= title
        - [:notice, :error, :message, :alert].each do |key|
          - unless flash[key].blank?
            %p{ :class => "flash #{key}" }= flash[key]
        = yield

